@model WebUI.Models.FullLocation;
@{ ViewData["Title"] = "ManageLocation"; }

<h1>Manage Location @Model.LocationId</h1>

<table class="table mb-5">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LocationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(model => model.LocationId)
            </td>
            <td>
                @Html.DisplayFor(model => model.Name)
            </td>
            <td>
                @Html.DisplayFor(model => model.Address)
            </td>
        </tr>
    </tbody>
</table>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].Quantity)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
          <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
          </tr>
        }
    </tbody>
</table>
<div class="row mt-4 justify-content-between">
    <div class="col-4">
        <button class="btn-primary mb-3" style="width: 100%;">
            @Html.ActionLink("Add Inventory", "AddInventory", new { LocationId = Model.LocationId })
        </button>
        <button class="btn-primary" style="width: 100%;">
            @Html.ActionLink("View Store Orders", "LocationOrders", new { LocationId = Model.LocationId })
        </button>
    </div>
    <div class="col-4">
        <button onclick="location.href='@Url.Action("ViewAllLocations", "Admin")'" class="btn-primary" style="float: right;">
        Back
        </button>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
