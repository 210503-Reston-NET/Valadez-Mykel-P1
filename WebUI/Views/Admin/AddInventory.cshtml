@model WebUI.Models.AddInventoryVM;
@{
    ViewData["Title"] = "AddInventory";
}

<h1>Add Inventory</h1>

<div class="col-md col-lg-6">
    <form asp-action="AddInventory">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ProductId" class="control-label"></label>
            <input asp-for="ProductId" class="form-control" />
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Quantity" class="control-label"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="LocationId" value=@Model.LocationId />
        <div class="form-group">
            <input type="submit" value="Add Inventory" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
