<div class="container">
    <div class="row mt-4">
        <btn class="col-4 btn-primary" onclick="location.href='@Url.Action("FindCustomer", "Admin")'">
            Find a Customer
        </btn>
    </div>
    <div class="row mt-4">
        <btn class="col-4 btn-primary" onclick="location.href='@Url.Action("FindOrder", "Admin")'">
