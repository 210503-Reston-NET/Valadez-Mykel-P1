
@model WebUI.Models.CustomerVM;
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div class="container">
    <div class="row">
        <div class="col-md col-lg-6">
            <form asp-action="Index">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Name" value="Name"/>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="col-md col-lg-4 offset-lg-2 justify-content-end">
            <div>
                <p>Don't have an account? Go to the sign up page to make one.</p>
            </div>
            <btn class="btn btn-primary" onclick="location.href='@Url.Action("Index", "SignUp")'">Sign Up</btn>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
